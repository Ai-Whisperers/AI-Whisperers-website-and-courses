{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../packages/config/typescript/tsconfig.base.json",
  "compilerOptions": {
    // Module resolution
    "baseUrl": ".",
    "paths": {
      "@/server/*": ["./server/src/*"],
      "@/client/*": ["./client/src/*"],
      "@/cli/*": ["./cli/src/*"],
      "@/types/*": ["./types/src/*"]
    },

    // Node.js-specific
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["ES2022"],
    "target": "ES2022",

    // Enable for CLI executables
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "server/**/*.ts",
    "client/**/*.ts",
    "cli/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
